# Feature Flags (set to true to enable)
ENABLE_FIREBASE=true
ENABLE_RAZORPAY=false
ENABLE_NOTIFICATIONS=false
ENABLE_CALLS=false

# Server
PORT=3000
NODE_ENV=development

# MongoDB (connection pooling configured in code: pool 10-50)
# For local dev with docker-compose.dev.yml:
MONGODB_URI=mongodb://dev:devpassword@localhost:27017/tagsphere?authSource=admin

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Encryption — MUST be at least 32 characters (AES-256-GCM)
ENCRYPTION_KEY=your-32-character-encryption-key!

# Firebase Admin SDK (from service account JSON)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"

# Frontend URL (for CORS) — comma-separated for multiple origins
FRONTEND_URL=http://localhost:5173

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Rate Limiting (global)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
