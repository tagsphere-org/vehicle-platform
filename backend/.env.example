# Server
PORT=3000
NODE_ENV=development

# MongoDB (connection pooling configured in code: pool 10-50)
MONGODB_URI=mongodb://localhost:27017/tagsphere

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Encryption — MUST be at least 32 characters (AES-256-GCM)
ENCRYPTION_KEY=your-32-character-encryption-key!

# OTP Service (use MSG91, Twilio, or similar in production)
OTP_SERVICE=mock
OTP_API_KEY=your-otp-api-key
OTP_SENDER_ID=TAGSPH

# Frontend URL (for CORS) — comma-separated for multiple origins
FRONTEND_URL=http://localhost:5173

# Rate Limiting (global)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
