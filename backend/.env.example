OTP_API_KEY=your-otp-api-key
OTP_SENDER_ID=TAGSPH

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10
