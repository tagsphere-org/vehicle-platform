# Docker Compose environment variables
# Copy to .env and fill in real values before running docker-compose up

# MongoDB
MONGO_ROOT_USER=tagsphere
MONGO_ROOT_PASSWORD=your-secure-mongo-password
DOCKER_PLATFORM=linux/arm64

# Feature Flags
ENABLE_FIREBASE=true
ENABLE_RAZORPAY=false
ENABLE_NOTIFICATIONS=false
ENABLE_CALLS=false
VITE_ENABLE_FIREBASE=true
VITE_ENABLE_RAZORPAY=false
VITE_ENABLE_NOTIFICATIONS=false
VITE_ENABLE_CALLS=false

# Backend
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key!!
FRONTEND_URL=https://tagsphere.co.in

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email
FIREBASE_PRIVATE_KEY="your-firebase-private-key"

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
